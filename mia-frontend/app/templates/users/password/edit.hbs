<div class="form-container">
    <h1>Create New Password</h1>
    <form {{action 'submit' on='submit'}} class='sign-in'>

    {{mia-input error=error}}

    {{#mia-input error=errors.password}}
        {{input type='password' placeholder='password' value=password name='password'}}
    {{/mia-input}}

    {{#mia-input error=errors.password_confirmation}}
        {{input type='password' placeholder='password confirmation' value=password_confirmation name='password_confirmation'}}
    {{/mia-input}}

    <input type="submit" value="Submit" />
    </form>
</div>

{{outlet}}
